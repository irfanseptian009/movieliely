datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  password  String
  favorites Movie[]  
  Watchlist Watchlist[]
}

model Movie {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  imageUrl  String
  userId    String   @db.ObjectId 
  user      User     @relation(fields: [userId], references: [id])
}

model Watchlist {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  userId   String   @db.ObjectId 
  movieId  String  
  title    String
  imageUrl String
  user      User     @relation(fields: [userId], references: [id])
}